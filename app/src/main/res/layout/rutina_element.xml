<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_rutina_excersice_1"
            android:layout_width="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/image_rutina_excersice_2"
            android:layout_width="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/image_rutina_excersice_3"
            android:layout_width="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/image_rutina_excersice_4"
            android:layout_width="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_height="100dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/name_rutina_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del ejercicio"
        android:textSize="16sp"
        android:padding="10dp"/>

</LinearLayout>