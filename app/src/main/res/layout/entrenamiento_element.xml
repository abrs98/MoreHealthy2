<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_training_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azuloscuro2"
        android:padding="@dimen/image_text_padding"
        android:layout_marginTop="@dimen/textMargin"
        android:text="ENTRENAMIENTO INICIAL"
        android:gravity="center"
        android:textColor="@color/blanco"
        android:textSize="@dimen/image_text_size" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_training_type"
            android:layout_width="match_parent"
            android:padding="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/entrenamiento_inicial"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="-53dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/textMargin"
                android:background="@color/azul1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="134dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Tiempo"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="Intensidad"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="Nivel"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/azul1"
                android:paddingBottom="@dimen/textMargin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_training_time"
                    android:layout_width="134dp"
                    android:gravity="center"
                    android:textColor="@color/azuloscuro1"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="30 Minutos"/>

                <TextView
                    android:id="@+id/tv_training_intensity"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azuloscuro1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Moderada"/>
                <TextView
                    android:id="@+id/tv_training_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azuloscuro1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Principiante"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>